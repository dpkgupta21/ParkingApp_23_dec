<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_black">

    <RelativeLayout
        android:id="@+id/details_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_20dp"
        android:background="@color/booking_bg_col"
        android:padding="@dimen/margin_20dp">

        <TextView
            android:id="@+id/vehiclePlate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/vehicle_plate_number_lbl"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_size_16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/vehicleMake_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18sp"
            android:textStyle="normal" />


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/horizontal_line_height"
            android:layout_below="@+id/vehicleMake_value"
            android:layout_marginTop="@dimen/margin_15dp"
            android:background="@color/dark_grey" />

        <TextView
            android:id="@+id/txt_pick_up_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/view"
            android:layout_marginTop="@dimen/margin_15dp"
            android:text="@string/pick_time"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_size_16sp"
            android:textStyle="normal" />drop

        <TextView
            android:id="@+id/txt_drop_time_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/view"
            android:layout_marginTop="@dimen/margin_15dp"
            android:text="@string/drop_time"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_size_16sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/pick_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txt_pick_up_time"
            android:layout_marginTop="@dimen/margin_5dp"
            android:drawablePadding="@dimen/margin_5dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/departure_flight_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txt_drop_time_name"
            android:layout_marginTop="@dimen/margin_5dp"
            android:drawablePadding="@dimen/margin_5dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18sp"
            android:textStyle="normal" />

        <View
            android:id="@+id/view_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/horizontal_line_height"
            android:layout_below="@+id/departure_flight_value"
            android:layout_marginTop="@dimen/margin_15dp"
            android:background="@color/dark_grey" />


        <TextView
            android:id="@+id/txt_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/view_two"
            android:layout_marginTop="@dimen/margin_15dp"
            android:text="@string/txt_order_status"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_size_16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/order_status_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/view_two"
            android:layout_marginTop="@dimen/margin_15dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18sp"
            android:textStyle="normal" />

    </RelativeLayout>

</RelativeLayout>