<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_black">

    <RelativeLayout
        android:id="@+id/details_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_20dp"
        android:background="@color/booking_bg_col"
        android:padding="@dimen/margin_20dp">

        <TextView
            android:id="@+id/ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/ticket"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_size_18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/ticket_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="#24245"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20sp"
            android:textStyle="normal" />


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/horizontal_line_height"
            android:layout_below="@+id/ticket_value"
            android:layout_marginTop="@dimen/margin_15dp"
            android:background="@color/dark_grey" />

        <TextView
            android:id="@+id/pickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/view"
            android:layout_marginTop="@dimen/margin_15dp"
            android:text="@string/pick_up"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_size_18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/drop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/view"
            android:layout_marginTop="@dimen/margin_15dp"
            android:text="@string/drop_off"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_size_18sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/pickup_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/pickup"
            android:layout_marginTop="@dimen/margin_5dp"
            android:drawablePadding="@dimen/margin_5dp"
            android:text="10/20/2015"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/drop_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/drop"
            android:layout_marginTop="@dimen/margin_5dp"
            android:drawablePadding="@dimen/margin_5dp"
            android:text="10/30/2015"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20sp"
            android:textStyle="normal" />

        <View
            android:id="@+id/view_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/horizontal_line_height"
            android:layout_below="@+id/drop_value"
            android:layout_marginTop="@dimen/margin_15dp"
            android:background="@color/dark_grey" />


        <TextView
            android:id="@+id/packed_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/view_two"
            android:layout_marginTop="@dimen/margin_15dp"
            android:text="@string/packed_time"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_size_18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/packed_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/view_two"
            android:layout_marginTop="@dimen/margin_15dp"
            android:text="7hr"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20sp"
            android:textStyle="normal" />


        <View
            android:id="@+id/view_three"
            android:layout_width="match_parent"
            android:layout_height="@dimen/horizontal_line_height"
            android:layout_below="@+id/packed_time"
            android:layout_marginTop="@dimen/margin_15dp"
            android:background="@color/dark_grey" />


        <RelativeLayout
            android:id="@+id/new_rl"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/view_three"
            android:layout_marginTop="@dimen/margin_15dp"
            android:background="@drawable/white_round_corner_btn_selector_btn"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_5dp"
            android:paddingTop="@dimen/margin_5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/more"

                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/text_size_18sp" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>