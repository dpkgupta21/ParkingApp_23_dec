<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:background="@color/payment_dialog_bg">

            <TextView
                android:id="@+id/messageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@color/search_bg"
                android:gravity="center"
                android:padding="@dimen/margin_20dp"
                android:text="Please Make Payment"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20sp"
                android:textStyle="normal" />

            <View
                android:id="@+id/horizontal_seperator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/messageText"
                android:background="@color/dark_grey" />

            <LinearLayout
                android:id="@+id/linear_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/horizontal_seperator"
                android:orientation="horizontal"
                android:padding="@dimen/margin_7dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txt_order_number_lbl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/search_bg"
                    android:padding="@dimen/margin_10dp"
                    android:singleLine="true"
                    android:text="Order Number"
                    android:textSize="@dimen/text_size_18sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/txt_order_number_val"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/search_bg"
                    android:padding="@dimen/margin_10dp"
                    android:singleLine="true"
                    android:text="Order Number"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_18sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <View
                android:id="@+id/horizontal_seperator_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/linear_order"
                android:background="@color/dark_grey" />

            <LinearLayout
                android:id="@+id/linear_slot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/horizontal_seperator_2"
                android:orientation="horizontal"
                android:padding="@dimen/margin_7dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txt_slot_number_lbl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/search_bg"
                    android:padding="@dimen/margin_10dp"
                    android:singleLine="true"
                    android:text="Slot Number"
                    android:textSize="@dimen/text_size_18sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/txt_slot_number_val"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/search_bg"
                    android:padding="@dimen/margin_10dp"
                    android:singleLine="true"
                    android:text="Slot Number"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_18sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <View
                android:id="@+id/horizontal_seperator_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/linear_slot"
                android:background="@color/dark_grey" />

            <LinearLayout
                android:id="@+id/linear_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/horizontal_seperator_3"
                android:orientation="horizontal"
                android:padding="@dimen/margin_7dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txt_duration_lbl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/search_bg"
                    android:padding="@dimen/margin_10dp"
                    android:singleLine="true"
                    android:text="Duration"
                    android:textSize="@dimen/text_size_18sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/txt_duration_val"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/search_bg"
                    android:padding="@dimen/margin_10dp"
                    android:singleLine="true"
                    android:text="duration"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_18sp"
                    android:textStyle="normal" />
            </LinearLayout>


            <View
                android:id="@+id/horizontal_seperator_4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/linear_duration"
                android:background="@color/dark_grey" />

            <LinearLayout
                android:id="@+id/linear_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/horizontal_seperator_4"
                android:orientation="horizontal"
                android:padding="@dimen/margin_7dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txt_amount_lbl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/search_bg"
                    android:padding="@dimen/margin_10dp"
                    android:singleLine="true"
                    android:text="Amount"
                    android:textSize="@dimen/text_size_18sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/txt_amount_val"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/search_bg"
                    android:padding="@dimen/margin_10dp"
                    android:singleLine="true"
                    android:text="amount"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_18sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <View
                android:id="@+id/horizontal_seperator_5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/linear_amount"
                android:background="@color/dark_grey" />

            <Button
                android:id="@+id/okButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_amount"
                android:layout_marginBottom="@dimen/margin_20dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginRight="@dimen/margin_15dp"
                android:layout_marginTop="@dimen/margin_20dp"
                android:background="@drawable/search_btn_selector_btn"
                android:padding="@dimen/margin_10dp"
                android:text="@string/ok"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18sp">


            </Button>
        </RelativeLayout>

        <ImageView
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/margin_20dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />
    </RelativeLayout>
</RelativeLayout>